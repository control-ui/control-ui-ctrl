{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2019",
        "jsx": "preserve",
        "removeComments": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noUnusedParameters": true,
        "paths": {
            "@ui-controls/progress": [
                "ctrls-progress/src"
            ],
            "@ui-controls/progress/*": [
                "ctrls-progress/src/*"
            ]
        }
    },
    "exclude": [
        "**/build/",
        "**/node_modules/"
    ]
}
